COMIENZA PROGRAMA PRUEBA
	SECCION IO
		STDIN
		STDOUT

		DEFINE DATA COMO FICHERO
			DATA.DESTINO ES "./datos.json"
			DATA.ACESO ES LECTURA,ESCRIPTURA
		SALIDA APUNTA A STDOUT
		
		DEFINE PEPES COMO ARRAY
	SECCION DEPENDECIAS
		USANDO "./modulos/parser/mtjson.mt" COMO mtscriptparser
	SECCION FUNCIONES
		HABLAR PARAMETROS: texto COMO PUNTERO A CADENA DEVUELVE: NADA
			ESCRIBE texto EN STDOUT 
	SECCION VARIABLES
		DEFINE D COMO ENTERO 
		DEFINE B COMO ENTERO DE 8 BYTES
		DEFINE C COMO ENTERO
		DEFINE E COMO PUNTERO A ENTERO
		DEFINE H COMO ARRAY
		DEFINE PERSONA COMO ESTRUCTURA
			PERSONA.ALTURA COMO ENTERO
			PERSONA.PESO COMO ENTERO
	SECCION PROCEDIMIENTO
		A ES 4
		A = 9999
		C *= A -= B
		MIENTRAS A<B
			A +== 1
